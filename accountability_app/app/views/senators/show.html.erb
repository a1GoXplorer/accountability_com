<div class='container'>
  
  <div class="row">
    <div class='senator_container col-sm-5'>
      <img src="<%= @senator.showpics %>"/>
    </div>
    <div class='senator_container col-sm-5'>
      <h1 class='senator_info_main'><%= @senator.first_name + " " + @senator.last_name%></h1><br>
      <h4 class='senator_info'>Job Title: <%= @senator.job_title %></h4>
      <h4 class='senator_info'>Rank: <%= @senator.rank %></h4>
      <h4 class='senator_info'>State: <%= @senator.state %></h4>
      <h4 class='senator_info'>Party: <%= @senator.political_party %></h4>
      <h4 class='senator_info'>Gender: <%= @senator.gender %></h4>  
      <h4 class='senator_info'>Birthdate: <%= @senator.date_of_birth %></h4>
      <h4 class='senator_info'>Phone Number: <%= @senator.phone %></h4>
      <h4 class='senator_info'>Start Date: <%= @senator.start_date %></h4>
      <h4 class='senator_info'>End Date: <%= @senator.end_date %></h4>
      <h4 class='senator_info'><a href="<%= @senator.website %>">Senator Website</a></h4>
      <h4 class='senator_info'><a href="<%= @senator.link_to_gov %>">GovTrack Website</a></h4>
      <h4 class='senator_info'><a href="https://twitter.com/<%= @senator.twitter_handle %>">Twitter</a></h4>
      <h4 class='senator_info'><a href="https://www.youtube.com/<%= @senator.youtube_id %>">YouTube</a></h4>
      <!-- <h4 class='senator_info'>CSPAN ID: <%= @senator.cspan_id %></h4> -->
    </div>
    <div class="senator_state_flag col-sm-2">
      <img class="flag" src="<%=@senator.showflag %>"/>
    </div>
  </div><br>

  <div class="senator_vote_container col-sm-4">
    <% @votes.each do |vote| %>
        <h4>Most Recent Vote: <%= vote[:most_recent_vote] %></h4>
        <h4>Missed Votes Percentage: <%= vote[:missed_votes_pct] %></h4>
        <h4>Percentage of Votes With Party: <%= vote[:votes_with_party_pct] %></h4>
    <% end %>
  </div>

  <div class="senator_bills_container col-sm-4">
    <% @votes.each do |vote| %>
      <h4>Number of Bills Sponsored: <%= vote[:bills_sponsored] %></h4>
      <h4>Number of Bills Co-Sponsored: <%= vote[:bills_cosponsored] %></h4>
    <% end %>
  </div>

</div>

  <br>
  <% if current_user %>
    <div>
      <%= button_to "Add to watchlist","/watchlists", params: {senator_id: @senator.id}, method: "post", class: "btn btn-primary" %>
    </div>
  <% end %>


